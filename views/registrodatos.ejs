<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos de Registro</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f8f9fa; /* Un fondo claro */
        }

        .register-data-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            text-align: left;
            width: 400px; /* Ancho moderado del formulario */
        }

        h2 {
            color: #343a40; /* Texto oscuro */
            margin-bottom: 30px;
            text-align: center;
        }

        .data-group {
            margin-bottom: 20px;
        }

        .data-group label {
            display: block;
            margin-bottom: 5px;
            color: #495057; /* Texto secundario oscuro */
            font-size: 0.9em;
            font-weight: bold;
        }

        .data-value {
            display: block;
            padding: 10px;
            border: 1px solid #ced4da; /* Borde gris claro */
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 1em;
            background-color: #e9ecef; /* Fondo gris muy claro para mostrar los datos */
            color: #495057;
        }

        .actions {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 30px;
        }

        .action-button {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        .modify-button {
            background-color: #ffc107; /* Amarillo para modificar */
            color: #212529;
        }

        .modify-button:hover {
            background-color: #e0a800;
        }

        .confirm-button {
            background-color: #28a745; /* Verde para confirmar */
            color: white;
        }

        .confirm-button:hover {
            background-color: #1e7e34;
        }
    </style>
</head>
<body>
    <div class="register-data-container">
        <h2>Datos de registro:</h2>
        <div class="data-group">
            <label for="nombre_completo">Nombre completo:</label>
            <span class="data-value">Guadalupe Rodriguez</span>
        </div>
        <div class="data-group">
            <label for="correo">Correo electrónico:</label>
            <span class="data-value">Rodri@gmail.com</span>
        </div>
        <div class="data-group">
            <label for="ciudad">Ciudad:</label>
            <span class="data-value">Mexico</span>
        </div>
        <div class="data-group">
            <label for="direccion">Dirección:</label>
            <span class="data-value">Av. Siempre viva #123</span>
        </div>
        <div class="data-group">
            <label for="numero_telefonico">Número telefónico:</label>
            <span class="data-value">6675889966</span>
        </div>
        <div class="actions">
            <button class="action-button modify-button">Modificar</button>
            <button class="action-button confirm-button">Confirmar</button>
        </div>
    </div>

    <script>
        const modifyButton = document.querySelector('.modify-button');
        const confirmButton = document.querySelector('.confirm-button');

        modifyButton.addEventListener('click', function() {
            alert('Redirigiendo a la página de modificación...');
            // Aquí iría la lógica para redirigir a la página de edición del registro
            window.location.href = '/registro'; // Ejemplo de redirección
        });

        confirmButton.addEventListener('click', function() {
            alert('Datos de registro confirmados. Procesando...');
            // Aquí iría la lógica para procesar la confirmación del registro
            // Por ejemplo, enviar los datos al servidor
        });
    </script>
</body>
</html>